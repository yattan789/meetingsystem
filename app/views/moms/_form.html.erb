<strong>SUGGESTED AGENDAS</strong>
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Agenda</th>
      <th scope="col">Created At</th>
      <th scope="col">Updated At</th>
    </tr>
  </thead>
  <tbody>

   <% @all_agenda.each do |x| %>
    <tr>
      <td> <%= x.content %> </td>
      <td> <%= x.created_at %> </td>
      <td> <%= x.updated_at %> </td>
    </tr>
  <% end %>
  </tbody>
</table>



  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-xl-7">
        <h1 class="text-white mb-4">Create New Meeting</h1>
        <div class="card" style="border-radius: 15px;">
          <div class="card-body">         
            <div class="row align-items-center py-3">
              <div class="col-md-3 ps-5">
                <h6 class="mb-0">Meeting Title</h6>
              </div>
              <div class="col-md-9 pe-5">
              <input class="form-control" type="text" placeholder = "<%= (@meet.title) %>"  readonly >
              </div>
              </div>
         
            <div class="row align-items-center py-3">
              <div class="col-md-3 ps-5">
              <h6 class="mb-0">Meeting Description</h6>
              </div>
              <div class="col-md-9 pe-5">
              <input class="form-control" type="text" placeholder = "<%=  @meet.description %>"  readonly >
              </div>
            </div>

            <div class="row align-items-center py-3">
              <div class="col-md-3 ps-5">
                <h6 class="mb-0">Date and time</h6>
              </div>
            <div class="col-md-9 pe-5">
              <input class="form-control" type="text" placeholder = "<%=  @meet.date %>"  readonly >
              </div>
            </div>

            <hr class="mx-n3">
            <div class="row align-items-center py-3">
              <div class="col-md-3 ps-5">
                <h6 class="mb-0">Venue</h6>
              </div>
              <div class="col-md-9 pe-5">
                  <%= form.text_field :venue %>
              </div>
            </div>

            <hr class="mx-n3">
            <div class="row align-items-center py-3">
              <div class="col-md-3 ps-5">
                <h6 class="mb-0">Report</h6>
              </div>
              <div class="col-md-9 pe-7">
                  <%= form.text_area :report , class: "form-control", rows: 5 %>
              </div>
            </div>

            <hr class="mx-n3">
            <div class="px-5 py-4">
              <%= form.submit "Create" ,  class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
