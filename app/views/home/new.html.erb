<%= form_for @agenda do |form| %>
  <div>
    <%= form.number_field :user_id , value: current_user.id  , type: :hidden %>
    <%= form.number_field :meet_id , value: @meetid , type: :hidden %>
  </div>
</br>

  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-xl-7">

        <h1 class="text-white mb-4">Create Agendas</h1>

        <div class="card" style="border-radius: 15px;">
          <div class="card-body">


         
              <div class="row align-items-center py-3">
              <div class="col-md-3 ps-5">
              <h6 class="mb-0">Meeting Description</h6>
              </div>
              <div class="col-md-9 pe-5">
              <input class="form-control" type="text" placeholder = "<%= (@meet.description) %>"  readonly >
              </div>
              </div>


              <div class="row align-items-center py-3">
              <div class="col-md-3 ps-5">
              <h6 class="mb-0">Meeting Type</h6>
              </div>
              <div class="col-md-9 pe-5">
              <input class="form-control" type="text" placeholder = "<% if @meet.type2 == 1 %> For All Dean <%end%>
              <% if @meet.type2 == 2 %> For all HODs <%end%>
              <% if @meet.type2 == 3 %> For All Chairperson + HOD <%end%> "  readonly >
              </div>
              </div>

               
              <div class="row align-items-center py-3">
              <div class="col-md-3 ps-5">
              <h6 class="mb-0">Add Agenda here</h6>
              </div>
              <div class="col-md-9 pe-5">

              <%= form.text_area :content, class: "form-control", type: "text" %>

              </div>
              </div>
              
              <%= form.submit "Create" ,  class: "btn btn-primary" %>
              </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</section>







<table id="example" class="table table-striped table-bordered" style="width:100%">
<thead class="thead-dark">

    <tr>
      <th scope="col">Previous Agenda</th>
      
      <th scope="col">Action</th>
    </tr>

  </thead>

        <tbody>
            <div>


   <% @provide_agenda.each do |x|%>
      <tr>
      <td>  <%= x.content %> </td>
      <td><%= link_to 'delete', home_delete_path(:id => x.id), class:"btn btn-dark" %></td>
      </tr>
    <%end%>
    
    </tfoot>
    </table>
  </div>

<% end %>